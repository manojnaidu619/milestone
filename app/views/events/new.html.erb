<div id="error messages">                                               <!-- Displaying error messages!! -->
  <% if @event.errors.any? %>
   <%= @event.errors.full_messages do |key,val| %>
     <ul>
       <li><%= key %></li>
       <li><%= val %></li>
     </ul>
    <% end %>
  <% end %>
</div>
<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :image %>
  <%= f.file_field :image, multiple: true, accept: "image/*" %><br>    <!-- validation of only all image types -->
  <%= f.submit %>
<%  end %><br><br>
<%= link_to "Back", root_path %>
