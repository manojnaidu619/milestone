<!DOCTYPE html>
<html>
  <head>
    <title>Milestone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  </head>

  <body>
    <div class="ui container" style="height: 20px; width: 100%;">
      <% if coordinator_signed_in? %>
        <div style="float: right; margin-right: 20px; margin-top: 10px;">
          <%= link_to "Profile", profile_index_path, class: "ui button" %>
          <%= link_to "Logout", destroy_coordinator_session_path, method: :delete, data: {confirm: "Are you sure?"}, class: 'ui red button' %>
        </div>
      <% end %>
    </div>

   <!-- Displaying Flash messages -->
   <div class="ui container" id="error_messages_display" style="margin-top: 20px; z-index: 99">
     <% if flash[:notice] %>
       <div class="ui success message"><span class="close">X</span><%= flash[:notice] %></div>
     <% elsif flash[:error] %>
        <div class="ui red message"><span class="close">X</span><%= flash[:error] %></div>
     <% elsif flash[:alert] %>
     <div class="ui negative message"><span class="close">X</span><%= flash[:alert] %></div>
     <% end %>
   </div>

    <%= yield %>
  </body>
</html>
