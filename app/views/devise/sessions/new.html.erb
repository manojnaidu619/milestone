<body id="sign_in_body">
  <div class="ui container" id="form_align">   <!-- Stylesheets are in coordinators.scss -->
    <div class="ui form">
      <h2  style="text-align:center;">Login</h2>
        <div class="ui container" id="form_content">                                               <!-- Displaying error messages!! -->
          <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
          <%- end -%>
        </div><br> 
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: 'ui positive button', id: "login_button" %>
          </div>
        <% end %><br>
        <%= render "devise/shared/links" %><br>
    </div>
  </div>

</body>
