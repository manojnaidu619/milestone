<div class="ui container" id="landing_page_image" style="background-color: red;">
  <div>
    <%= link_to 'Coordinators Login', new_coordinator_session_path, class: 'large right floated positive ui button', style:'margin: 40px' %>
  </div>
  <div class="center_text" >
    <h1>Lorem Ipsum</h1>
    <%= link_to "New Registration", new_registration_path %>
  </div>
</div>

 <!-- Displaying Cards -->

<div class="ui container" style="display: flex; flex-direction: row;" >
  <% @events.each do |event| if @events.present? %>            <!-- @events from home#index route -->
  <div class="ui segment" style="width: 280px; height: 315px;">
    <%= image_tag event.image.first.variant(resize: '250x250'), style: 'margin: 0px;' %><hr>     <!-- Showing first image of associated event -->
    <b><%= event.title %></b><br>
    <%= truncate(event.description, length: 30) %><br>
    By: <%= event.coordinator.email %> <div class='ui avatar image'><%= image_tag event.coordinator.profile.avatar.variant(resize: '50x50') if event.coordinator.profile %></div>
    <%= link_to 'Show', event_path(event), class: 'ui basic green button' %><br>
   <% end %>                                <!-- 'end' for if-block  -->
  <% end %>
  </div>
</div>
