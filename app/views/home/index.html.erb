<% @events.each do |event| if @events.present? %>            <!-- @events from home#index route -->
  <b><%= event.title %></b><br>
  <%= event.description %><br>
  <%= image_tag event.image.first.variant(resize: '300x300') %><br>           <!-- Showing first image of associated event -->
  Submitted by: <%= event.coordinator.email %><br>
  <%= link_to 'Show', event_path(event) %><br>
 <% end %><br>                                  <!-- 'end' for if-block  -->
<% end %>
